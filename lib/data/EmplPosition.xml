 <entity entity-name="EmplPosition" package-name="mantle.humanres.position">
        <field name="emplPositionId" type="id" is-pk="true"/>
        <field name="emplPositionClassId" type="id"/>
        <field name="statusId" type="id"/>
        <field name="filledByPartyId" type="id"/>
        <field name="employerOrganizationPartyId" type="id"/>
        <field name="payGradeId" type="id"/>
        <field name="budgetId" type="id"/>
        <field name="budgetItemSeqId" type="id"/>
        <field name="estimatedFromDate" type="date-time"/>
        <field name="estimatedThruDate" type="date-time"/>
        <field name="salaryFlag" type="text-indicator"/>
        <field name="exemptFlag" type="text-indicator"/>
        <field name="fullTimeFlag" type="text-indicator"/>
        <field name="temporaryFlag" type="text-indicator"/>
        <field name="actualFromDate" type="date-time"/>
        <field name="actualThruDate" type="date-time"/>
        <field name="standardHoursPerWeek" type="number-integer"/>
        <relationship type="one" related-entity-name="EmplPositionClass"/>
        <relationship type="one" title="EmplPosition" related-entity-name="moqui.basic.StatusItem"/>
        <relationship type="one" title="FilledBy" related-entity-name="Party">
            <key-map field-name="filledByPartyId"/>
        </relationship>
        <relationship type="one" title="EmployerOrganization" related-entity-name="Party">
            <key-map field-name="employerOrganizationPartyId"/>
        </relationship>
        <relationship type="one" related-entity-name="BudgetItem">
            <key-map field-name="budgetId"/>
            <key-map field-name="budgetItemSeqId"/>
        </relationship>
        <seed-data>
            <!-- Employment Position Status -->
            <moqui.basic.StatusType description="Employment Position Status" statusTypeId="EmplPosition"/>
            <moqui.basic.StatusItem description="Planned For" statusId="EMPL_POS_PLANNEDFOR" statusTypeId="EmplPosition"/>
            <moqui.basic.StatusItem description="Active/Open" statusId="EMPL_POS_ACTIVE" statusTypeId="EmplPosition"/>
            <moqui.basic.StatusItem description="Inactive/Closed" statusId="EMPL_POS_INACTIVE" statusTypeId="EmplPosition"/>
        </seed-data>
    </entity>