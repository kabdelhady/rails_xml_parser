<entity entity-name="PersonTraining" package-name="mantle.humanres.ability">
        <field name="partyId" type="id" is-pk="true"/>
        <field name="trainingClassId" type="id" is-pk="true"/>
        <field name="fromDate" type="date-time" is-pk="true"/>
        <field name="thruDate" type="date-time"/>
        <field name="workEffortId" type="id"/>
        <field name="approverPartyId" type="id"/>
        <field name="trainingApproved" type="text-indicator" enable-audit-log="true"/>
        <field name="reason" type="text-medium"/>
        <relationship type="one" related-entity-name="Party"/>
        <relationship type="one" related-entity-name="TrainingClass"/>
        <relationship type="one" related-entity-name="WorkEffort"/>
        <relationship type="one" title="Approver" related-entity-name="Party">
            <key-map field-name="approverPartyId"/>
        </relationship>
    </entity>